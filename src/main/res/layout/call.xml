<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="70dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/share"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_screen_share_24" />

    <TextView
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/share"
        android:text="Create call link"
        android:textColor="@color/black"
        android:textSize="25dp"
         />

    <TextView
        android:id="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/link"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/share"
        android:text="share a link for you Whatsapp call"/>

    <TextView
        android:id="@+id/recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recent"
        android:layout_below="@id/call"
        android:layout_marginTop="20dp"
        />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/review"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo"
        android:layout_width="55dp"
        android:scaleType="centerCrop"
        android:layout_height="55dp"
        android:src="@drawable/pro6"

        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/callname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jay"
        android:layout_toRightOf="@id/photo"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"/>

    <ImageButton
        android:id="@+id/aerrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/rightt"
        android:scaleType="centerCrop"
        android:layout_below="@id/callname"
        android:layout_toRightOf="@id/photo"
        android:background="@color/white"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    <TextView
        android:id="@+id/late"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14 minute ago"
        android:layout_below="@id/callname"
        android:layout_toRightOf="@id/aerrow"/>

    <ImageButton
        android:id="@+id/voicecall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:scaleType="centerCrop"
        android:src="@drawable/call"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </RelativeLayout>




</RelativeLayout>